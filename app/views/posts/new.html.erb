<div class="post_main">

  <header class="post_header">
    <%= link_to image_tag('MIRMlogo.png' , size: '100x100'), "/" %>
  </header>

  <div class="post_content">
    <div class="container">
    <%= form_with model: @post, local: true do |f| %>
        <div class="post_field">
          <%= f.file_field :image, class:"post_form_image", style: "display: none;", autocomplete: "image" %>
        </div>
        <div class="post_field">
          <%= f.text_field :title, class:"post_form_title", placeholder:"タイトル" %>
        </div>
        <div class="post_field">
          <%= f.text_area :text, class:"form_text", placeholder:"本文を書いてください" %>
        </div>
      <%= f.submit "投稿する", class:"form_submit"%>
    <% end %>
    </div>
  </div>
</div>