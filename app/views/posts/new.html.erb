<div class="post_main">

  <header class="post_header">
    <%= link_to image_tag('MIRMlogo.png' , size: '100x100'), "/" %>
  </header>

    <div class="container">
    <%= form_with model: @post, local: true do |f| %>

      <div class="row">

        <div class="col d-flex justify-content-center">
          <div class="image_btn">
            <%= f.label :image, class:"fa fa-file-picture-o fa-2x" do %>
              <%= f.file_field :image, style: "display: none;", autocomplete: "image" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row">

        <div class="col bg-primary">
          <%= f.text_field :title, class:"post_form_title", placeholder:"タイトル" %>
        </div>
      </div>

      <div class="row">

        <div class="col bg-danger">
          <%= f.text_area :text, class:"form_text", placeholder:"本文を書いてください" %>
        </div>
      </div>

      <%= f.submit "投稿する", class:"form_submit"%>
    <% end %>
    </div>
</div>