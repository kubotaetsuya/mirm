<header class="post_header">
    <%= link_to image_tag('MIRMlogo.png' , size: '120x120'), "/" %>
</header>

<div class="container">
<%= form_with model: @user, url:user_registration_path, local: true do |f| %> 
  <div class="row">
    <div class="col">
      <%= f.label :avatar  do %>
      <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar.variant(resize: '100x100'), class: "my_page_avatar"%>
        <% else %>
          <%# 画像がない時のサンプルデータ %>
        <%= image_tag "sample.png", :size =>'100x100', class: "my_page_avatar"%>
      <% end %>
      <%= f.file_field :avatar, style: "display: none;", autocomplete: "avatar" %>
      <% end %>
    </div>
  </div>

    <div class="row">
      <div class="col">
        <label class="form_label">
          名前
        </label>
        <%= f.text_field :name, class:"input-default",id:"name",placeholder:"名前を入れてください",maxlength:"10" %>
      </div>
      <div class="col">
        <label class="form_label">
          自己紹介文
        </label>
        <%= f.text_area :description, class:"input-default",id:"description",placeholder:"あなたの自己紹介文を140字で書いてください",maxlength:"140" %>
      </div>
  </div>
  <% end %>
</div>